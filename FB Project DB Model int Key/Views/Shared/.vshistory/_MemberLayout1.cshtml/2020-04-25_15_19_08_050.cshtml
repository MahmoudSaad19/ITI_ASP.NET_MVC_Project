<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/fontawesome-5.5/css/all.min.css" />
    <link rel="stylesheet" href="~/slick/slick.css">
    <link rel="stylesheet" href="~/slick/slick-theme.css">
    <link rel="stylesheet" href="~/magnific-popup/magnific-popup.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/tooplate-infinite-loop.css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    
    <style>
        #infinite{
            background-image:none;
            height:auto;
            min-height:60px;
            background-color:#369;
        }
        #testimonials{
            background-image:none;
        }
        #contact{
            background-image:none;
            padding: 0px; 
            height:auto;
            min-height:60px;
            background-color:#369; 

        }
        .likebtn{
        padding:0!important;
        padding: 0.375rem 0.75rem !important;
    }
    </style>
</head>
<body>
    <!-- Hero section -->
    <section id="infinite" class="text-white tm-font-big tm-parallax">
        <!-- Navigation -->
        <nav class="navbar navbar-expand-md tm-navbar" id="tmNav">
            <div class="container">
                <div class="tm-next">
                    <a href="/Home/Index" class="navbar-brand">NoteBook</a>
                </div>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars navbar-toggler-icon"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <form action="/Member/Search" class="form-control p-0" style="height:auto;">
                                <input type="search" style="border:none;"  placeholder="Search" aria-label="Search" name="name">
                                <button type="submit" style="background:none; border:none;"><i class="fas fa-search"></i></button>                     
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link tm-nav-link" href="/Member/Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link tm-nav-link" asp-controller="Member" asp-action="Profile" asp-route-ID="id">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link tm-nav-link" asp-area="Identity" asp-page="/Account/User/Setting">Settings</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <section id="body" class="tm-section-pad-top">
        @RenderBody()

    </section>

    <section id="testimonials" class="tm-section-pad-top tm-parallax-2">
    </section>
    <section id="contact" class="tm-section-pad-top tm-parallax-2">
    </section>

    <script src="~/js/jquery-1.9.1.min.js"></script>
    <script src="~/slick/slick.min.js"></script>
    <script src="~/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/js/easing.min.js"></script>
    <script src="~/js/jquery.singlePageNav.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <script src="~/js/AjaxUN/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>