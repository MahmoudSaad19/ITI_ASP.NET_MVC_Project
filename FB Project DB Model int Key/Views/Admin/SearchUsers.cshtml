@model IEnumerable<User>
@inject UserManager<User> userManager
@inject RoleManager<Role> rm
@inject FB_Project_DB_Model_int_Key.Data.ApplicationDbContext dbContext

@{
    ViewData["Title"] = "Admin Search";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
    var currentUser = await userManager.GetUserAsync(User);
}

<div class="container">
    <input type="text" id="txtsearch" placeholder="Enter Name" class="form-control" />
    <br />
    <a class="btn btn-block btn-sm btn-outline-light border-primary text-primary" asp-area="Identity" asp-page="/Account/Admin/Create">Create</a>

    <table class="table d-block col-12">
        <thead class="d-block">
            <tr class="d-block">
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id="DataSearching" class="col-12 d-block">
            @foreach (var item in Model)
            {
                <tr style="display:flex; width:100%">
                    <td class="col-2">
                        @if (item?.Photo == null)
                        {
                            <img src="~/Images/bubble.jpeg" class="img-fluid" />
                        }
                        else
                        {
                            <img src="data:image/*;base64,@Convert.ToBase64String(item?.Photo)" class="img-fluid" />
                        }
                    </td>
                    <td class="align-content-center d-flex col-2">
                        <a href="/Member/Profile/@item.Id" class="ml-2 text-primary h5 align-self-center d-flex">@item.UserName</a>
                    </td>
                    <td class="d-flex col-2">
                        @if (item.Blocked)
                        {
                        <form action="/Admin/UnBlock/@item.Id" class="align-self-center"> 
                            <button class=" btn btn-secondary rounded align-self-center">UnBlock <i class="fas fa-check"></i></button>
                        </form>
                        }
                        else
                        {
                    <form action="/Admin/Block/@item.Id" class="align-self-center">
                        <button class=" btn btn-dark rounded align-self-center">Block <i class="fas fa-ban"></i></button>
                    </form>
                        }
                    </td>
                    <td class="col-6 d-flex">
                        <form action="/Admin/UpdateRole/@item.Id" class="align-self-center">
                            @foreach (var r in rm.Roles)
                            {
                                <label>@r.Name</label>
                                if (await userManager.IsInRoleAsync(item, r.Name))
                                {
                                    <input type="checkbox" name="selectedRoles" value="@r.Name" checked="checked" />
                                }
                                else
                                {
                                    <input type="checkbox" name="selectedRoles" value="@r.Name" />
                                }
                            }
                            @if (item.Id == currentUser.Id)
                            {
                                <input type="button" data-toggle="modal" data-target="#confirmation" value="Update Roles" class="btn btn-outline-warning" />
                            }
                            else
                            {
                                <input type="submit" value="Update Roles" class="btn btn-outline-warning" />
                            }
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- User confirmation Modal -->
<div class="modal fade" id="confirmation" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="confirmationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title text-warning" id="confirmationLabel">Warning</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center" id="confirmationBody">
                <h3 class="warn">Are you sure you want to change your roles ?</h3>
                <br />
                <input type="button" value="yes I want to change them" onclick="change()" class="btn btn-outline-warning text-danger warn" />
                <h3 class="role">Select Roles again </h3>
                <hr class="role" />
                <form action="/Admin/UpdateRole/@currentUser.Id" class="align-self-center role">
                    @foreach (var r in rm.Roles)
                    {
                        <label>@r.Name</label>
                        if (await userManager.IsInRoleAsync(currentUser, r.Name))
                        {
                            <input type="checkbox" name="selectedRoles" value="@r.Name" checked="checked" />
                        }
                        else
                        {
                            <input type="checkbox" name="selectedRoles" value="@r.Name" />
                        }
                    }                    
                    <input type="submit" value="Update Roles" class="btn btn-outline-warning" />
                </form>
                <hr class="role" />
                <br />
                <br />
                <h6 class="role text-danger">Note: if you removed your self as an admin you can't go back</h6>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/js/jquery/jquery-3.5.0.js"></script>
    <script>
        $("#txtsearch").on("keyup", function () {
            var txtenter = $(this).val();
            $("table tr").each(function (results) {
                if (results !== 0) {
                    var id = $(this).find("td:nth-child(2)").text();
                    if (id.indexOf(txtenter) !== 0 && id.toLowerCase().indexOf(txtenter.toLowerCase()) < 0) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                }
            });
        });

        $('.role').hide();

        function change() {
            $('.warn').hide();
            $('.role').show();
        }

    </script>
}

