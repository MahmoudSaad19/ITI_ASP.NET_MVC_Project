@model Microsoft.AspNetCore.Identity.IdentityResult

@{
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
    ViewData["Title"] = "CreateRole";
}
<div class="d-flex col-12">
    <div class="col-2"></div>
    <div class="col-8">        
        @if (Model == Microsoft.AspNetCore.Identity.IdentityResult.Success)
        {
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                <strong>Success</strong><br /> Role Created Successfully
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        else if (Model?.Errors.Count() > 0)
        {
            <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                <strong>Error</strong><br /> Problem Creating New Role
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        else
        {
            <br />
            <br />
            <br />
        }
    </div>
</div>
<div class="col-12 d-flex">
    <div class="col-3"></div>
    <div class="col-6">        
        <form class="text-center" method="post">
            <input type="text" class="form-control text-center shadow" name="roleName" placeholder="Role Name">
            <br />
            <textarea type="text" class="form-control text-center shadow" name="roleDesc" placeholder="Role Description"></textarea>
            <hr />
            <button type="submit" class="btn btn-primary rounded-pill col-4">Create</button>
        </form>
    </div>    
</div>
    

