@model IEnumerable<User>
@{
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    ViewData["Title"] = "Search";
}

<div class="col-12">
    <table class="table col-6 offset-3">       
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="d-flex">
                    <td class="col-4 d-flex">
                        <div class="col-4"></div>
                        <div class="col-8 align-self-center">
                            @if (item?.Photo == null)
                            {
                                <img src="~/Images/bubble.jpeg" class="img-fluid rounded-circle" />
                            }
                            else
                            {
                                <img src="data:image/*;base64,@Convert.ToBase64String(item?.Photo)" class="img-fluid rounded-circle" />
                            }
                        </div>
                    </td>
                    <td class="col-8 align-content-center">
                        <a href="/Member/Profile/@item.Id" class="h4 align-middle text-primary">@item.UserName</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
