@page
@model FB_Project_DB_Model_int_Key.Areas.Identity.Pages.Account.AdminCreateUserModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "AdminCreateUser";
}

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <label><input asp-for="Input.Gender" value="M" type="radio" />Male</label>
                <label><input asp-for="Input.Gender" value="F" type="radio" />Female</label>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" class="form-control" type="date" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>

            <!--Edit-->


            <div class="form-group">
                <label>Role</label>
                @*<input asp-for="Input.BD" class="form-control" type="date" />*@
                @*<select asp-for="Country" asp-items="Model.Countries"></select>*@
                @{
                    List<SelectListItem> Countries = new List<SelectListItem>
                              {
            new SelectListItem { Value = "1", Text = "Role1" },
            new SelectListItem { Value = "2", Text = "Role2" },
            new SelectListItem { Value = "3", Text = "Role3"  },
               };

                }
                <select a asp-items="Countries"></select>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
   
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
