@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<style>
    li{
        list-style:none;
    }
</style>
<div>
    <br />
    <br />
    
</div>
<div class="container d-flex">
    <div class="col-1 col-md-3"></div>
    <div class="col-md-6 text-center">
        <form id="account" method="post">
            <h4 class="text-info">Use a local account to log in</h4>
            <br />
            <br />            
            <div class="form-group">
                <input asp-for="Input.UserName" class="form-control shadow" placeholder=" Enter Username or Email" />
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control shadow" placeholder="Password" />
            </div>  
            <div asp-validation-summary="All" class="text-danger list-group-item-warning shadow" style="list-style:none;"></div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block rounded-pill table-hover" style="background-color:cornflowerblue;">Log in</button>
            </div>
            <br />
            <div class="form-group">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-sm btn-outline-success text-primary text-monospace rounded-bottom">Register as a new user</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
